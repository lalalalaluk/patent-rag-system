# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
POSTGRES_DB=patent_rag_db
POSTGRES_USER=patentuser
POSTGRES_PASSWORD=patentpass
# For Docker mode: use 'postgres'
# For local dev mode: use 'localhost'
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ChromaDB
# For Docker mode: use 'chromadb'
# For local dev mode: use 'localhost'
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Google Gemini API (FREE - get your key at https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your-google-api-key-here

# Taiwan Patent Office API (if needed)
TAIWAN_PATENT_API_KEY=your-patent-api-key-here

# Redis
# For Docker mode: redis://redis:6379/0
# For local dev mode: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
TOP_K_RESULTS=5
MAX_PAGES_TO_SCRAPE=50

# Embedding Model (local, no API key needed)
EMBEDDING_MODEL=all-MiniLM-L6-v2
