# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# IMPORTANT: This is a template file.
# DO NOT put real secrets here!
# Copy this to .env.production and fill in real values.
# DO NOT commit .env.production to Git!

# Django Settings
SECRET_KEY=change-this-to-a-long-random-string-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (Production)
POSTGRES_DB=rag_db_prod
POSTGRES_USER=raguser_prod
POSTGRES_PASSWORD=use-strong-password-here
POSTGRES_HOST=your-db-host.rds.amazonaws.com
POSTGRES_PORT=5432

# ChromaDB (Production)
CHROMA_HOST=chromadb-prod.internal
CHROMA_PORT=8000

# Google Gemini API
GOOGLE_API_KEY=your-production-google-api-key

# Redis (Production)
REDIS_URL=redis://your-redis-prod.cache.amazonaws.com:6379/0

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
TOP_K_RESULTS=5
MAX_PAGES_TO_SCRAPE=200

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Security Settings (Production only)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
